<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="floating" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_purple</item>
    </style>

    <style name="floating_silver" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_silver</item>
    </style>

    <style name="floating_qr" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_qr_purple</item>
    </style>

    <style name="floating_qr_silver" parent="Widget.Design.FloatingActionButton">
        <item name="android:foreground">@drawable/fab_qr_silver</item>
    </style>

</resources>